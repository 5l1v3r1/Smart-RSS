{
  "name": "Smart RSS Detector",
  "developer": {
    "name": "zakius",
    "url": ""
  },
  "description": "RSS Detector for Smart RSS extension.",
  "manifest_version": 2,
  "version": "1.0.3",
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "scan.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "RSS",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  }
}